import pygame
from pygame.sprite import Sprite

class Enemy_Bullet(Sprite):

    def __init__(self, settings, screen, enemy):

        super().__init__()
        self.screen = screen

        self.rect = pygame.Rect(0, 0, settings.enemy_bullet_width,  # Rect创造一个矩形
                                settings.enemy_bullet_height)
        self.rect.centerx = enemy.rect.centerx  # 设置矩形初始位置
        self.rect.bottom = enemy.rect.bottom

        self.y = float(self.rect.y)  # 储存子弹位置

        self.color = settings.enemy_bullet_color
        self.speed_factor = settings.enemy_bullet_speed_factor

    def update(self):

        self.y += self.speed_factor

        self.rect.y = self.y  # 更新子弹rect的位置

    def draw_bullet(self):  # 在屏幕上绘制子弹

        pygame.draw.rect(self.screen, self.color, self.rect)
